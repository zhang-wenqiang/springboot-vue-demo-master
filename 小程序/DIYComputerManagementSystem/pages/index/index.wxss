/**index.wxss**/
/* 引过来好物推荐的样式 */
@import '/components/titleCom/titleCom.wxss';

.userinfo {
  
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}
.index-bottom-text {
  font-size: 10px;
  display:flex;
  align-items:center;
  justify-content:center;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.main_swiper{
  height: 130px;
  width: 100%;
}
.main_swiperitem{
  height: 150px;
  width: 100%;
}
.main_swiper_image{
  height: 100%;
  width: 100%;
}

.nav-list{
  padding: 10px;
  display: flex;
  flex-flow: wrap;
  align-items: center;
}
.nav-list>view{
  width: 42%;
  margin: 10px 10px 10px 10px;
  justify-content:space-between;
  display: flex;
  flex-flow: wrap;
  align-items: center;
}
.nav-list image{
  width: 100px;
  height: 80px;
  border-radius: 10px;
  padding: 20px;
}

/* 零件名字样式 */
.part-name{
  margin-left: 20px;
  margin-right: 20px;
  font-size: 12px;
  font-weight: 600;
}
/* 零件价钱样式 */
.part-price{
  color: red;
  margin-left: 20px;
  font-weight: 600;
}



